{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "moduleResolution": "bundler",
        "paths": {
            "react": [
                "./node_modules/preact/compat"
            ],
            "react-dom": [
                "./node_modules/preact/compat"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}